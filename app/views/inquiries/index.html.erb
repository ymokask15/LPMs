<p id="notice"><%= notice %></p>

<h1>お問い合わせ</h1>

<%= form_tag('/inquiries_search') do %>
  <p>
  検索
  <br>
  <%= text_field_tag 'search[name]'%><%= submit_tag'検索'%>
  </p>
<%end%>

<table>
  <thead>
    <tr>
      <th>学籍番号・氏名</th>
      <th>用件</th>
      <th>詳細</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inquiries.each do |inquiry| %>
      <tr>
        <td><%= inquiry.name %></td>
        <td><% case inquiry.matter
                 when 0 %>捜索願
              <% when 1 %>メッセージ
              <% when 2 %>質問・意見
              <% end %>
        </td>
        <td><%= inquiry.detail %></td>
        <td><%= link_to '詳細', inquiry %></td>
        <td><%= link_to '編集', edit_inquiry_path(inquiry) %></td>
        <td><%= link_to '削除', inquiry, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録', new_inquiry_path %>
