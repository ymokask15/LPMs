<p id="notice"><%= notice %></p>

<h1>貸し出し</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>貸し出し</th>
      <th>貸出日</th>
      <th>返却日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lends.each do |lend| %>
      <tr>
        <td><%= lend.name %></td>
        <td><%= lend.loaned_out %></td>
        <td><%= lend.loaned_date %></td>
        <td><%= lend.return_date %></td>
        <td><%= link_to '詳細', lend %></td>
        <td><%= link_to '編集', edit_lend_path(lend) %></td>
        <td><%= link_to '削除', lend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

