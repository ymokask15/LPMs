<p id="notice"><%= notice %></p>

<h1>貸し出し一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>貸し出したもの</th>
      <th>貸し出し日</th>
      <th>返却日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lends.each do |lend| %>
      <tr>
        <td><%= lend.name %></td>
        <td><% case lend.loaned_out
                 when 0 %>ネクタイ
              <% when 1 %>スカート
              <% when 2 %>ズボン
              <% end %>
        </td>
        <td><%= lend.loaned_date.strftime("%m月%d日") %></td>
        <td><%= lend.return_date.strftime("%m月%d日") %></td>
        <td><%= link_to '詳細', lend %></td>
        <td><%= link_to '編集', edit_lend_path(lend) %></td>
        <td><%= link_to '削除', lend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

